<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="row">
  <div style='width: 1200px;'>
    <div id="map" style='width: 1200px; height: 600px;'></div>
  </div>
  <script>
    $( document ).ready(function() {
      handler = Gmaps.build('Google');
      handler.buildMap({
          provider: {
            zoom: 17,
            center: new google.maps.LatLng(<%= @theater.lat %>, <%= @theater.lng %>)
            },
          internal: {
            id: 'map'
          }
        },
        function(){
          markers = handler.addMarkers([
            {
              "lat": <%= @theater.lat %>,
              "lng": <%= @theater.lng %>
            }
          ]);
        }
      );
    });
  </script>
  <% if @theater.photo_reference %>
    <%= image_tag "https://maps.googleapis.com/maps/api/place/photo?maxwidth=1200&photoreference=#{@theater.photo_reference}&key=#{ENV['GOOGLE_API_KEY']}" %><br>
  <% end %>
</div>
