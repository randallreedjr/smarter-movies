<div class="row">
  <!--<div class="col-md-4 col-md-offset-4">-->
  <div class="address">
    Results for <%= @request.formatted_address %>
  </div>
</div>
<br>

<% @results.each do |result| %>
  <div class="row">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <%#= link_to theater.name, theater %>
        <%= result[:name] %>
        <%= "(#{result[:rating]} stars)" %>
      </div>
    </div>
    <% result[:movies].each do |movie| %>
      <div class="col-sm-4">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">
              <%= movie[:title] %>
            </div><span class="tomato-pic <%= "rotten" unless movie[:tomatometer] >= 60 %>"></span>
          </div>
          <div class="panel-body">
            <div>
              <%= movie[:description] %>
            </div>
            <br>
            <div>
              Rotten Tomatoes Rating:
              <div class="progress">
                <div class="progress-bar <%= movie[:tomatometer] >= 60 ? "progress-bar-danger" : "progress-bar-success" %>" role="progressbar" aria-valuenow="<%= movie[:tomatometer] %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= movie[:tomatometer] %>%"><%= movie[:tomatometer] %>%
                </div>
              </div>
              Upcoming Showtimes:
            </div>
            <div class="list-group">
              <% movie[:showtimes].each do |showtime| %>
                <div class="list-group-item">
                  <%= showtime[:time].split('T').last %>
                  <% if showtime[:fandango_url] %>
                    - <%= link_to "Fandango", showtime[:fandango_url], target: "_blank" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
