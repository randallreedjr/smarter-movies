Results for <%= @request.formatted_address %>
<ol>
<% @theaters.each do |theater| %>
  <li><%= link_to "#{theater.name} (#{theater.rating} stars)", theater %></li>
  <ul>
    <% theater.movies.uniq.each do |movie| %>
      <li><%= "#{movie.title} - #{movie.description}" %>
      <ul>
      <% movie.showtimes.each do |showtime| %>
        <% next if showtime.theater != theater %>
        <li><%= "#{showtime.time}" %></li>
      <% end %>
      </ul>
    <% end %>
  </ul>
<% end %>
</ol>